    <header class="header">

        <div class="header">
            <nav class="navbar">
                <a href="/">Home</a>
                <a href="/catalog">Catalog</a>
                {{#if isAuthenticated}}
                <a href="/profile">Profile</a>
                <a href="/book/create">Create Review</a>
                <a href="/users/logout">Logout</a>
                {{else}}
                <a href="/users/login">Login</a>
                <a href="/users/register">Register</a>
                {{/if}}
            </nav>
        </div>

    </header>
    {{{body}}}
