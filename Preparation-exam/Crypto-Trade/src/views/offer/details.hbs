<section id="details-info">
    <h1>Details</h1>
    <div class="coin-image">
        <img src="{{offer.imageUrl}}">
    </div>

    <div class="coin-info">
        <div class="coin-text">
            <h1 id="name">{{offer.name}}</h1>
            <h3 id="payment">Payment method: {{offer.paymendMethod}}</h3>
            <p id="price"><span>Price: ${{offer.price}}</span></p>
            <p id="description">{{offer.description}}</p>
        </div>
        {{#if isAuthenticated}}
        <div class="product-btn">
            {{#if isOwner}}
            <div class="author">
                <a href="/offer/{{offer._id}}/edit" class="btn-edit">Edit</a>
                <a href="/offer/{{offer._id}}/delete" class="btn-delete">Delete</a>
            </div>

            {{else}}
            {{#unless isBought}}
            <a href="/offer/{{offer._id}}/buy" class="btn-buy">Buy</a>
            {{else}}
            <!-- Logged in user who has already buy this crypto-->
            <p class="buy-message">You already bought these crypto coins.</p>
            {{/unless}}
            {{/if}}
        </div>
         {{/if}}
    </div>
</section>